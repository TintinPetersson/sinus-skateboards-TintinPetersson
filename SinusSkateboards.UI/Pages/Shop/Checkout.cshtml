@page
@model SinusSkateboards.UI.Pages.Shop.CheckoutModel
@{
}
@if (Model.hej > 0)
{
<div class="container">
    <div class="row mt-5 justify-content-center align-content-center d-flex text-center text-light">
        <h1 class="mt-5">Order successful!</h1>
    </div>
    <div class="row mt-5 justify-content-center align-content-center d-flex text-center text-light">
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="d-flex justify-content-center">
                    <div class="d-flex flex-row align-items-center">
                        <h4 class="text-light"><span class="card-link">Order number: </span>@Model.Order.OrderNumber</h4>
                    </div>
                </div>
                <h5 class="text-light mt-1"><span class="card-link">Quantity: </span>@Model.Order.Products.Count() items</h5>
                <h5 class="text-light mt-1"><span class="card-link">Order receit sent to: </span>@Model.Customer.Email</h5>
                <h5 class="text-light mt-1"><span class="card-link">Delivery address: </span>@Model.Customer.Address</h5>
            </div>
        </div>
    </div>
</div>
}
else
{
    <div class="container mt-5">
        <div class="row justify-content-center align-items-center">
            <h1 class="mb-3 text-light">Checkout</h1>
        </div>
        <div class="row justify-content-center align-items-center">
            <h3 class="mb-3 text-light" style="background:black;">Total price: @Model.Sum kr</h3>
        </div>
        <div class="row justify-content-center align-items-center">
            <div class="col-sm-12 col-md-12 col-lg-4">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label text-light" asp-for="@Model.Customer.Name">Name</label>
                        <input type="text" asp-for="@Model.Customer.Name" class="form-control" />
                        <span asp-validation-for="@Model.Customer.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-light" asp-for="@Model.Customer.Email">Email</label>
                        <input type="email" asp-for="@Model.Customer.Email" class="form-control" />
                        <span asp-validation-for="@Model.Customer.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-light" asp-for="@Model.Customer.Address">Address</label>
                        <input type="text" asp-for="@Model.Customer.Address" class="form-control" />
                        <span asp-validation-for="@Model.Customer.Address" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-light" asp-for="@Model.Customer.City">City</label>
                        <input type="text" asp-for="@Model.Customer.City" class="form-control" />
                        <span asp-validation-for="@Model.Customer.City" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-light" asp-for="@Model.Customer.ZipCode">Zip Code</label>
                        <input type="text" asp-for="@Model.Customer.ZipCode" class="form-control" />
                        <span asp-validation-for="@Model.Customer.ZipCode" class="text-danger"></span>
                    </div>
                    <div class="mb-3 justify-content-center align-content-center text-center d-flex">
                        <button type="submit" class="btn btn-light">Order!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

