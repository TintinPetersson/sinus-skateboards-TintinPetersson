@page
@model SinusSkateboards.UI.Pages.Shop.ProductShopModel
@{
}

<div class="container mt-5 mb-3">
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 mb-4">
                <div class="card text-light p-3 mb-2">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                            <a asp-page="/Shop/SpecificItem" asp-route-id="@product.Id">
                                <img class="card-img-top" src="~/images/@product.Image">
                            </a>
                        </div>
                    </div>
                    <div class="ms-2">
                        <h2 class="mb-0 ml-3" style="color:bisque; font-weight:bolder">@product.Title</h2>
                    </div>
                    <div class="mt-5">
                        <h2 class="heading">@product.Price kr</h2>
                        <div class="mt-3 mb-2">
                            <span>Color: @product.Color</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
