@page
@model SinusSkateboards.UI.Pages.Shop.CartModel
@{
}
<div class="shopping-cart">
    <div class="titleCart">
        Shopping Cart
    </div>
    @if (Model.Products != null)
    {
        @foreach (var item in Model.Products)
        {
            <div class="item">
                <div class="buttons">
                    <form method="post">
                        <button class="bg-transparent border-0" type="submit" asp-page-handler="Delete" asp-route-id="@item.Id"><img src="~/images/logos/x-mark-64.png" style="width:20px;" /></button>
                    </form>
                </div>
                <div class="image">
                    @if (item.Image.Contains("Skateboard"))
                    {
                        <img src="~/images/@item.Image" style="width:100%; max-height: 5vw;" alt="" />
                    }
                    else
                    {
                        <img src="~/images/@item.Image" style="width:75px; max-height: 5vw;" alt="" />
                    }
                </div>
                <div class="description">
                    <span>@item.Title</span>
                    <span>@item.ProductCategory</span>
                </div>
                <div class="total-price">@item.Price kr</div>
            </div>
        }
        <div class="align-self-center sumTitle">Summary: <span class="pl-5 summary">@Model.Sum kr</span></div>
        <a asp-page="/Shop/Checkout" class="align-self-center text-light orderNo ml-2 mt-1 mb-1">Checkout</a>
    }
    else
    {
        <div class="row justify-content-center">
            <h2 class="text-light">Empty</h2>
        </div>
    }
</div>