@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome | Sinus Skateboards!</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index"><img src="~/images/logos/sinus-logo-symbol-small.png" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Shop/CheckOrder">Order</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Shop/ProductShop">Shop</a>
                        </li>
                    </ul>
                </div>
            </div>
            @if (SignInManager.IsSignedIn(User))
            {
                <a class="login btn btn-outline-light mr-2" asp-page="/Logout">Log out</a>
                <a class="login btn btn-outline-light mr-2" asp-page="/Admin/CheckOrders">Orders</a>
                <a class="login btn btn-outline-light mr-2" asp-page="/Admin/ProductOverview">Products</a>
                <a asp-page="/Shop/Cart"><img src="~/images/logos/shopping-cart-64.png" style="width:40px; height: 40px;" /></a>
            }
            else
            {
                <a class="login btn btn-outline-light mr-2" asp-page="/Login">Log in</a>
                <a class="mr-3" asp-page="/Shop/Cart"><img src="~/images/logos/shopping-cart-64.png" style="width:40px; height: 40px;" /></a>
            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
